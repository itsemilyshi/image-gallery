<%= render "nav/navbar" %>

<p id="notice"><%= notice %></p>

<h1>Cart</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.photos.each do |photo| %>
      <%=photo.description%>
      <tr>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Remove from Cart', remove_from_cart_path(photo) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Checkout', checkout_path %>


